<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Parts">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg2"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="20dp"
        android:paddingVertical="6dp"
        android:text="CHOOSE FROM THE BELOW IMAGES"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:layout_constraintBottom_toTopOf="@id/nxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img3" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img5" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img6" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img7" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img8" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="4dp"
                    android:src="@drawable/img9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Left Tyre"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Head Light"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Roof (left)"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Num plate"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="LOGO"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Roof"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Right tyre"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Head light"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingVertical="3dp"
                        android:text="Roof"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="italic" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/nxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/poppins_semibold"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
</androidx.constraintlayout.widget.ConstraintLayout>