                android:paddingHorizontal="4dp"/>

            <ImageView
                android:id="@+id/imagePart7"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:paddingHorizontal="4dp"/>

            <ImageView
                android:id="@+id/imagePart8"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:paddingHorizontal="4dp"/>

            <ImageView
                android:id="@+id/imagePart9"
                android:layout_width="150dp"
