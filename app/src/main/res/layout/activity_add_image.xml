<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddImage">

    <RelativeLayout
        android:id="@+id/RLayout"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/drop_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagePart1"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img1"/>

        <ImageView
            android:id="@+id/imagePart2"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img2"
            android:layout_toRightOf="@+id/imagePart1"/>

        <ImageView
            android:id="@+id/imagePart3"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img3"
            android:layout_toRightOf="@+id/imagePart2"/>

        <ImageView
            android:id="@+id/imagePart4"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img4"
            android:layout_toRightOf="@+id/imagePart3"/>

        <ImageView
            android:id="@+id/imagePart5"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img5"
            android:layout_toRightOf="@+id/imagePart4"/>

        <ImageView
            android:id="@+id/imagePart6"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img6"
            android:layout_toRightOf="@+id/imagePart5"/>

        <ImageView
            android:id="@+id/imagePart7"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img7"
            android:layout_toRightOf="@+id/imagePart6"/>

        <ImageView
            android:id="@+id/imagePart8"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img8"
            android:layout_toRightOf="@+id/imagePart7"/>

        <ImageView
            android:id="@+id/imagePart9"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/img9"
            android:layout_toRightOf="@+id/imagePart8"/>

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RLayout" />

